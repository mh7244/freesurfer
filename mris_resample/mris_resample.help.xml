<help>

  <name>mris_resample</name>

  <arguments>

    <required-flagged>
      <argument>--atlas_reg FILE</argument>
      <explanation>Atlas spherical registration file.</explanation>
      <argument>--subject_reg FILE</argument>
      <explanation>Subject spherical registration file.</explanation>
      <argument>--subject_surf FILE</argument>
      <explanation>Subject actual surface.</explanation>
      <argument>--out FILE</argument>
      <explanation>Output resampled surface.</explanation>
    </required-flagged>

    <optional-flagged>
      <argument>--annot_in FILE</argument>
      <explanation>Input annotation (for the subject). If present, output annotation must be present as well.</explanation>
      <argument>--annot_out FILE</argument>
      <explanation>Output annotation (for the resampled atlas). If present, input annotation must be present as well.</explanation>
    </optional-flagged>

  </arguments>

  <reporting>Report bugs to &lt;freesurfer@nmr.mgh.harvard.edu&gt;</reporting>

</help>
